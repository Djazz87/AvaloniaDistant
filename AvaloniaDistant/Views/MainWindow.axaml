<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AvaloniaDistant.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:YourProjectName.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaDistant.Views.MainWindow"
        x:DataType="viewModels:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="AvaloniaDistant">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <viewModels:MainWindowViewModel/>
    </Design.DataContext>
    
    <Grid RowDefinitions="Auto, Auto *" ColumnDefinitions="Auto, Auto, Auto *" Margin="10">
        <DataGrid ItemsSource="{Binding IllnessRecords}"
                  AutoGenerateColumns="False"
                  GridLinesVisibility="All">

            <DataGrid.Columns>

                <DataGridTextColumn Header="Сотрудник"
                                    Binding="{Binding Employee.FullName}" />

                <DataGridTextColumn Header="Должность"
                                    Binding="{Binding Employee.Position}" />

                <DataGridTextColumn Header="Отдел"
                                    Binding="{Binding Employee.Department.Name}" />

                <DataGridTextColumn Header="Болезнь"
                                    Binding="{Binding IllnessType.Name}" />

                <DataGridTextColumn Header="Начало"
                                    Binding="{Binding StartDate}" />

                <DataGridTextColumn Header="Конец"
                                    Binding="{Binding EndDate}" />

                <DataGridTextColumn Header="Примечание"
                                    Binding="{Binding DiagnosisNote}" />

            </DataGrid.Columns>
        </DataGrid>
        
        <Button VerticalAlignment="Top" 
                Grid.Row="0" Grid.Column="1"
                Content="Добавить"  
                Command="{Binding }"/>
        <Button VerticalAlignment="Top" 
                Grid.Row="0" Grid.Column="2"
                Content="Удалить"  
                Command="{Binding }"/>
        <Button VerticalAlignment="Top" 
                Grid.Row="0" Grid.Column="3"
                Content="Изменить"  
                Command="{Binding }"/>


        
            
    </Grid>

</Window>
